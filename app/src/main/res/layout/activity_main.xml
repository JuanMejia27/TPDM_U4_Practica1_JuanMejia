<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUEGO DE DADOS"
            android:textSize="30dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/dados"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ronda:"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="3"
            android:id="@+id/rondas"
            android:enabled="false"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Iniciar"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/inicio"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador 1:"
            android:textSize="18dp"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dado1"
            android:layout_marginLeft="10dp"
            android:id="@+id/p1d1"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dado2"
            android:layout_marginLeft="10dp"
            android:id="@+id/p1d2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiro 1:"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:id="@+id/p1t"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="2"
            android:layout_marginLeft="10dp"
            android:enabled="false"
            android:id="@+id/p1res"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador 2:"
            android:textSize="18dp"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dado3"
            android:layout_marginLeft="10dp"
            android:id="@+id/p2d1"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dado4"
            android:layout_marginLeft="10dp"
            android:id="@+id/p2d2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiro 1:"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:id="@+id/p2t"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="2"
            android:layout_marginLeft="10dp"
            android:enabled="false"
            android:id="@+id/p2res"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador 3:"
            android:textSize="18dp"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dado5"
            android:layout_marginLeft="10dp"
            android:id="@+id/p3d1"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/dado6"
            android:layout_marginLeft="10dp"
            android:id="@+id/p3d2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiro 1:"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:id="@+id/p3t"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="2"
            android:layout_marginLeft="10dp"
            android:id="@+id/p3res"
            android:enabled="false"/>
    </LinearLayout>


</LinearLayout>